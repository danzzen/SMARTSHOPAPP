<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item">
    <TextView
        android:id="@+id/bno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study cursors"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/dt"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp" />

    <TextView
        android:id="@+id/productnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bno"
        android:layout_marginStart="29dp"
        android:layout_marginTop="49dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/qnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bno"
        android:layout_alignTop="@+id/productnm"
        android:layout_marginStart="28dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/unt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/qnt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="TextView"
        android:layout_below="@+id/qnt"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_below="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"/>

</RelativeLayout>